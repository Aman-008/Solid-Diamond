#include <iostream>
using namespace std;

int main()
{
    int n;
    cin >> n;
    for (int row = 0; row < n; row++)
    {
        for (int col0 = 0; col0 < n - 1 - row; col0++)
        {
            cout << " ";
        }
        for (int col1 = 0; col1 < row + 1; col1++)
        {
            cout << "* ";
        }
        cout << endl;
    }

    for (int row1 = 0; row1 < n; row1++)
    {
        for (int col2 = 0; col2 < row1; col2++)
        {
            cout << " ";
        }
        for (int col3 = 0; col3 < n - row1; col3++)
        {
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}
